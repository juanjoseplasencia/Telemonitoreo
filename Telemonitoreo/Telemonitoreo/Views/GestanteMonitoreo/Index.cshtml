@{
    ViewBag.Title = "Lista de Reportes de Monitoreo";
}

<h2>Lista de Reportes de Monitoreo</h2>

@using (Html.BeginForm("ExportarExcel", "GestanteMonitoreo", FormMethod.Post, new { id = "ListadoGestanteMonitoreos", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="GestanteNroDocumento">DNI</label>
            </div>
            <div class="col-md-9">
                <input name="hdnGestanteNroDocumento" class="form-control" id="hdnGestanteNroDocumento" style="display:none;">
                <input name="GestanteNroDocumento" class="form-control" id="GestanteNroDocumento" type="text" maxlength="8">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-8">
            <div class="col-md-9 col-md-offset-3">
                <input name="btnBuscar" class="btn btn-primary btn-group-sm" id="btnBuscar" type="button" value="Buscar">
            </div>
        </div>
    </div>
    <input type="hidden" id="hdSortColumn" name="hdSortColumn">
    <input type="hidden" id="hdSortDirection" name="hdSortDirection">
}
<div class="row">
    <div class="col-md-11">
        <div class="text-left">
            <input name="btnExportarExcel" class="btn btn-primary btn-group-sm" id="btnExportarExcel" type="button" value="Exportar">
        </div>
        <table id="gridView"><tr><td></td></tr></table>
        <div id="pager"></div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqGestanteMonitoreos")
}
