@using Telemonitoreo.Utils

@{
    ViewBag.Title = "Lista de Establecimientos";
}

<h2>Lista de Establecimientos</h2>
@using (Html.BeginForm("ExportarExcel", "Establecimiento", FormMethod.Post, new { id = "ListadoEstablecimientos", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="Codigo">Código RENAES</label>
            </div>
            <div class="col-md-9">
                <input name="Codigo" class="form-control" id="Codigo" type="text">
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="Nombre">Nombre</label>
            </div>
            <div class="col-md-9">
                <input name="Nombre" class="form-control" id="Nombre" type="text">
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="Estado">Estado</label>
            </div>
            <div class="col-md-9">
                @Html.DropDownList("Estado", null, GlobalConstants.SeleccioneEstado, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-8">
            <div class="col-md-9 col-md-offset-3">
                <input name="btnBuscar" class="btn btn-primary btn-group-sm" id="btnBuscar" type="button" value="Buscar">
            </div>
        </div>
    </div>
    <input type="hidden" id="hdSortColumn" name="hdSortColumn" >
    <input type="hidden" id="hdSortDirection" name="hdSortDirection" >
}
<div class="row">
    <div class="col-md-11">
        <div class="text-left">
            <input name="btnActualizar" class="btn btn-primary" id="btnActualizar" type="button" value="Actualizar Establecimientos" >
            @*<input name="btnExportarExcel" class="btn btn-primary btn-group-sm" id="btnExportarExcel" type="button" value="Exportar">*@
        </div>
        <table id="gridView"><tr><td></td></tr></table>
        <div id="pager"></div>
    </div>
</div>
<div class="row">
    <div class="col-md-8 text-left">
        @*<input name="btnDeshabilitar" class="btn btn-primary" id="btnDeshabilitar" type="button" value="Deshabilitar">*@
        @*<input name="btnHabilitar" class="btn btn-primary" id="btnHabilitar" type="button" value="Habilitar" style="margin-left: 15px;">*@
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqEstablecimientos")
}