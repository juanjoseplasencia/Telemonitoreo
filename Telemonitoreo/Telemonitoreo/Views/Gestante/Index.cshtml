@using Telemonitoreo.Utils;

@{
    ViewBag.Title = "Lista de Gestantes";
}

<h2>Lista de Gestantes</h2>

@using (Html.BeginForm("ExportarExcel", "Gestante", FormMethod.Post, new { id = "ListadoGestantes", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="GestanteNroDocumento">DNI</label>
            </div>
            <div class="col-md-9">
                <input name="GestanteNroDocumento" id="GestanteNroDocumento" class="form-control" type="text" maxlength="8">
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="APaterno">A. Paterno</label>
            </div>
            <div class="col-md-9">
                <input name="APaterno" id="APaterno" class="form-control" type="text">
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="AMaterno">A. Materno</label>
            </div>
            <div class="col-md-9">
                <input name="AMaterno" id="AMaterno" class="form-control" type="text">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="EstablecimientoId">Est. de Salud</label>
            </div>
            <div class="col-md-9">
                @Html.DropDownList("EstablecimientoId", null, GlobalConstants.SeleccioneEstablecimiento, 
                htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="GestanteTelefono">Nro Celular</label>
            </div>
            <div class="col-md-9">
                <input name="GestanteTelefono" id="GestanteTelefono" class="form-control" type="text">
            </div>
        </div>
        <div class="col-md-4">
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-8">
            <div class="col-md-9 col-md-offset-3">
                <input name="btnBuscar" class="btn btn-primary btn-group-sm" id="btnBuscar" type="button" value="Buscar">
            </div>
        </div>
    </div>
    <input type="hidden" id="hdSortColumn" name="hdSortColumn" >
    <input type="hidden" id="hdSortDirection" name="hdSortDirection" >
}
<div class="row">
    <div class="col-md-11">
        <div class="text-left">
            <input name="btnExportarExcel" class="btn btn-primary btn-group-sm" id="btnExportarExcel" type="button" value="Exportar">
        </div>
        <table id="gridView"><tr><td></td></tr></table>
        <div id="pager"></div>
    </div>
</div>
<div class="row">
    <div class="col-md-8 text-left">
        <input name="btnEliminar" class="btn btn-primary" id="btnEliminar" type="button" value="Eliminar">
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqGestantes")
}
