@using Telemonitoreo.Utils;

@{
    ViewBag.Title = "Lista de Usuarios";
}

<h2>Lista de Usuarios</h2>
@using (Html.BeginForm("ExportarExcel", "Account", FormMethod.Post, new { id = "ListadoUsuarios", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="NroDocumento">DNI</label>
            </div>
            <div class="col-md-9">
                <input name="NroDocumento" class="form-control" id="NroDocumento" type="text" maxlength="8">
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="APaterno">A. Paterno</label>
            </div>
            <div class="col-md-9">
                <input name="APaterno" class="form-control" id="APaterno" type="text">
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="AMaterno">A. Materno</label>
            </div>
            <div class="col-md-9">
                <input name="AMaterno" class="form-control" id="AMaterno" type="text">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="Estado">Estado</label>
            </div>
            <div class="col-md-9">
                @Html.DropDownList("Estado", null, GlobalConstants.SeleccioneEstado, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="EstablecimientoId">Est. de Salud</label>
            </div>
            <div class="col-md-9">
                @Html.DropDownList("EstablecimientoId", null, GlobalConstants.SeleccioneEstablecimiento, 
                htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="Rol">Rol</label>
            </div>
            <div class="col-md-9">
                @Html.DropDownList("RoleName", null, GlobalConstants.SeleccioneRol, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-8">
            <div class="col-md-9 col-md-offset-3">
                <input name="btnBuscar" class="btn btn-primary btn-group-sm" id="btnBuscar" type="button" value="Buscar">
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-11">
        <div class="text-left">
            <input name="btnExportarExcel" class="btn btn-primary btn-group-sm" id="btnExportarExcel" type="button" value="Exportar">
        </div>
        <table id="gridView"><tr><td></td></tr></table>
        <div id="pager"></div>
    </div>
</div>
<div class="row">
    <div class="col-md-8 text-left">        
            <input name="btnEliminar" class="btn btn-primary" id="btnEliminar" type="button" value="Eliminar">
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqUsuarios")
}
