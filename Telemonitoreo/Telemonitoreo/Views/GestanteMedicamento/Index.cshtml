@using Telemonitoreo.Utils;

@{
    ViewBag.Title = "Lista de Medicamentos Asignados";
}

<h2>Lista de Medicamentos Asignados a Gestantes</h2>
@using (Html.BeginForm("ExportExcel", "GestanteMedicamento", FormMethod.Post, new { id = "ListadoGestanteMedicamento", 
    enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="NroDocumento">DNI</label>
            </div>
            <div class="col-md-9">
                <input name="NroDocumento" class="form-control" id="NroDocumento" type="text" maxlength="8">
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="APaterno">A. Paterno</label>
            </div>
            <div class="col-md-9">
                <input name="APaterno" class="form-control" id="APaterno" type="text">
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="AMaterno">A. Materno</label>
            </div>
            <div class="col-md-9">
                <input name="AMaterno" class="form-control" id="AMaterno" type="text">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="col-md-3">
                <label>Est. de Salud</label>
            </div>
            <div class="col-md-9">
                @Html.DropDownList("EstablecimientoId", null, GlobalConstants.SeleccioneEstablecimiento, 
                htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-3">
                <label for="FechaI">Fecha inicio (Asignación)</label>
            </div>
            <div class="col-md-9">
                <input name="FechaI" class="form-control" id="FechaI" type="text">
            </div>
        </div>

        <div class="col-md-4">
            <div class="col-md-3">
                <label for="FechaF">Fecha fin (Asignación)</label>
            </div>
            <div class="col-md-9">
                <input name="FechaF" class="form-control" id="FechaF" type="text">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-8">
            <div class="col-md-9 col-md-offset-3">
                <input name="btnBuscar" class="btn btn-primary btn-group-sm" id="btnBuscar" type="button" value="Buscar">
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-11">
        <table id="sg1"></table>
        <div id="psg1"></div>
        <div id="pager"></div>
    </div>
</div>
<div class="row">
    <div class="col-md-8 text-left">
        <input name="btnEliminar" class="btn btn-primary" id="btnEliminar" type="button" value="Deshabilitar">
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqGestanteMedicamentos")
}