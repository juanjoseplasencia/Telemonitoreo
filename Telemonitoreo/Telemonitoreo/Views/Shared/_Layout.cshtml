<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Telemonitoreo</title>
    @Styles.Render("~/Content/themes/base/jqueryuicss")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/jqGridcss")
    @Styles.Render("~/Content/css")
</head>
    <body>
        <div id="header">
            <div class="container">
                <div class="col-md-6">
                    <img src="~/images/logo.jpg" />
                </div>
                <div class="col-md-6" style="text-align:right;">
                    <img src="~/images/header.jpg" />
                </div>
            </div>
            <div class="top-action-bar">
                <div class="col-md-2">
                    &nbsp;
                </div>
                <div class="col-md-10" style="text-align: right;">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div id="content" class="container-fluid">
            <div class="row">
                <div id="leftbar" class="col-md-2" style="float:left; height: 100%;">
                    @Html.Partial("LeftBarMenu")
                </div>
                <div class="col-md-10">
                    @RenderBody()
                </div>
            </div>
        </div>
        <footer style="bottom: auto;">
            <p>&copy; @DateTime.Now.Year - Telemonitoreo</p>
        </footer>
        <div id="GenericDialog"></div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jqGrid")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqUtils")
        @Scripts.Render("~/bundles/custom")
        @RenderSection("scripts", required: false)
    </body>
</html>
